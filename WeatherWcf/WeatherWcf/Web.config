<?xml version="1.0"?>
<configuration>

  <appSettings>
      <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
      <add key="WorldWeatherUrl" value="https://www.timeanddate.com/" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1"/>
  </system.web>
  <system.serviceModel>
    <services>
      <service name="WeatherWcf.WeatherService" behaviorConfiguration="ServiceBehaviour" >
          <endpoint address="" behaviorConfiguration="web" binding="webHttpBinding"  contract="WeatherWcf.IWeatherService" />
          <endpoint contract="IMetadataExchange" binding="mexHttpBinding"  address="mex" />
          <endpoint address="soap" behaviorConfiguration="http" binding="basicHttpBinding"  contract="WeatherWcf.IWeatherService" />
        </service>
     </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehaviour">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
        <!--<behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>-->
      </serviceBehaviors>
      
      <endpointBehaviors>
            <behavior name="web">
                <webHttp helpEnabled="true" />
            </behavior>
            <behavior name="http">
            </behavior>
      </endpointBehaviors>
    </behaviors>
    <protocolMapping>
      <add binding="basicHttpBinding" scheme="http" />
      <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
